@model AQACommute.Models.Commute

@{
    ViewBag.Title = "Details";
}

<h1 class="body-content">Trip Insights</h1>

<div class="row body-content">
    <div class="col-sm-6 col-md-8">        
        <h2>@Html.DisplayFor(model => model.StartPoint)<span class="glyphicon glyphicon-arrow-right"></span> @Html.DisplayFor(model => model.EndPoint)</h2>
        <h3>Commute Length <span class="glyphicon glyphicon-road"></span> : @Html.DisplayFor(model => model.TotalMiles) Miles</h3>
        <h3>Emissions: @Html.DisplayFor(model => model.CO2GeneratedLbs, "NumFormat") Lbs CO2 Equivalent</h3>
        <h3>Percentage of commute compared to daily global average <span class="glyphicon glyphicon-globe"></span>: @ViewBag.Global%</h3>
        <h3>Percentage of commute compared to daily Cuyahoga County average: @ViewBag.CuyahogaCounty%</h3>
        <h3>Percentage of commute compared to 2030 Paris Climate Agreement Goal: @ViewBag.Twenty30Goal%</h3>

    </div>

    <div class="col-sm-6 col-md-4">
        <iframe frameborder='0' width='265' height='375' src='//www.fueleconomy.gov/feg/widgets/gas-tips/tipwidget.html'></iframe>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CommuteID }) |
    @Html.ActionLink("Back to List", "Index")
</p>


